<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_bg_corner_12_below">
        <TextView
            android:id="@+id/tv_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Exercise"
            android:textColor="@color/white"
            style="@style/Textview.Medium.Display.SM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_x_symbol"
            android:layout_marginStart="@dimen/dp_15"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_about_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@id/cl_header"
        android:text="About Exercise"
        style="@style/Textview.Bold.Display.SM"
        />

    <ImageView
        android:id="@+id/iv_workout"
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_180"
        app:layout_constraintTop_toBottomOf="@id/tv_about_exercise"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@color/purpleVictoria"
        />
    <TextView
        android:id="@+id/tv_definition_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_workout"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        style="@style/Textview.Bold.Display.XS" />
    <TextView
        android:id="@+id/tv_definition"
        android:layout_width="@dimen/dp_370"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_definition_label"
        android:layout_marginTop="@dimen/dp_10"
        android:text="ABVBSDFSDFDASFDSAF"
        style="@style/Textview.Medium.LG"/>

    <TextView
        android:id="@+id/tv_what_for_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is it for?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_definition"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        style="@style/Textview.Bold.Display.XS" />

    <TextView
        android:id="@+id/tv_what_for"
        android:layout_width="@dimen/dp_370"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_what_for_lable"
        android:layout_marginTop="@dimen/dp_10"
        android:text="ABVBSDFSDFDASFDSAF"
        style="@style/Textview.Medium.LG"/>
</androidx.constraintlayout.widget.ConstraintLayout>